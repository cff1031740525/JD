<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.bwei.com.jd.UserInfoActivity">
<RelativeLayout
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@mipmap/fh"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="个人信息"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/touxiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:textColor="@color/hei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textSize="18dp" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp" />

    </RelativeLayout>
<RelativeLayout
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="用户名"
        android:textColor="@color/hei"
        android:textSize="18dp"
        android:id="@+id/textView" />

   <ImageView
       android:id="@+id/gd"
       android:src="@mipmap/gd"
       android:layout_width="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/username"
        android:text="11111"
        android:textSize="18dp"
        android:textColor="@color/hui"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/gd"
        android:layout_toStartOf="@+id/gd" />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/nick"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="昵称"
            android:textColor="@color/hei"
            android:textSize="18dp"
            android:id="@+id/textView1" />

        <ImageView
            android:id="@+id/gd1"
            android:src="@mipmap/gd"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/nickname"
            android:text="11111"
            android:textSize="18dp"
            android:textColor="@color/hui"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/gd1"
            android:layout_toStartOf="@+id/gd1" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="性别"
            android:textColor="@color/hei"
            android:textSize="18dp"
            android:id="@+id/textView2" />

        <ImageView
            android:id="@+id/gd2"
            android:src="@mipmap/gd"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
        <TextView
            android:text="男"
            android:textSize="18dp"
            android:textColor="@color/hui"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/gd2"
            android:layout_toStartOf="@+id/gd2" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="出生日期"
            android:textColor="@color/hei"
            android:textSize="18dp"
            android:id="@+id/textView3" />

        <ImageView
            android:id="@+id/gd3"
            android:src="@mipmap/gd"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
        <TextView
            android:text="1997年04月07日"
            android:textSize="18dp"
            android:textColor="@color/hui"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/gd3"
            android:layout_toStartOf="@+id/gd3" />
    </RelativeLayout>

</LinearLayout>
